@model RecepcjaHotel.Models.Room

@{
    ViewData["Title"] = "Edit";
    RecepcjaDBContext db = new RecepcjaDBContext();
    IEnumerable<RoomsType> types = db.RoomsTypes;
}

<h1 class="display-4">Edytuj Pokój</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RoomsType.Name" class="control-label"></label>
                <select asp-for="RoomsTypeId" class="form-control" asp-items="ViewBag.RoomsTypeId">
                    @foreach (RoomsType item in types)
                    {
                        <option value=@item.Id>@item.Name</option>
                    }
                </select>
                <span asp-validation-for="RoomsTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Powrót do Listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
