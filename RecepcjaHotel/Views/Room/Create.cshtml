@model RecepcjaHotel.Models.Room
@using RecepcjaHotel.Models;

@{
    ViewData["Title"] = "Create";
    RecepcjaDBContext db = new RecepcjaDBContext();
    IEnumerable<RoomsType> types = db.RoomsTypes;
}

<h1 class="display-4">Dodaj Nowy Pokój</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomsType.Name" class="control-label"></label> 
                <select asp-for="RoomsTypeId" class ="form-control" asp-items="ViewBag.RoomsTypeId">
                    @foreach(RoomsType item in types)
                    {
                        <option value=@item.Id>@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Powrót do Listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
