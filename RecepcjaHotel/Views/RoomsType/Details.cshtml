@model RecepcjaHotel.Models.RoomsType

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Szczegóły Rodzaju Pokoju Hotelowego</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size) m<sup>2</sup>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) zł
        </dd>
        @if (Model.Description != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        }

    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
    <a class="btn btn-dark" asp-action="Index">Powrót do Listy</a>
</div>
<br/>
@if (Model.Rooms.Count != 0)
{
    <div>
        <h2>Pokoje</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Numer Pokoju
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Rooms)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            <a asp-controller="Room" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
