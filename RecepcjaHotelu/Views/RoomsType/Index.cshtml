@model IEnumerable<RecepcjaHotelu.Models.RoomsTypeModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Rodzaje Pokojów</h1>

<p>
    <a asp-action="Create">Dodaj nowy rodzaj pokoju</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size) m<sup>2</sup>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) zł
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new {  id=item.ID }) |
                @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }) |
                @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
